<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/home_background">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Signup"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/Sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:drawablePadding="10dp"
            android:hint="First Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Last Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_Nick_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Nick Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_Birth_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_today_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Birthdate"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_id_card"
            android:drawablePadding="10dp"
            android:hint="Email "
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_home_town"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Home Town "
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_About_me"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_id_card"
            android:drawablePadding="10dp"
            android:hint="About me"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_m_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
            android:drawablePadding="10dp"
            android:hint="m Status"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/Sign_up_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_id_card"
            android:drawablePadding="10dp"
            android:hint="phone number"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey" />


        <EditText
            android:id="@+id/Sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey"

            />

        <EditText
            android:id="@+id/Sign_up_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Repassword"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey"

            />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/editbox"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:buttonTint="@color/Black"
                android:shadowColor="@color/Black"
                android:text="Male"
                android:textColor="@color/grey" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:buttonTint="@color/Black"
                android:shadowColor="@color/Black"
                android:text="Female"
                android:textColor="@color/grey" />
        </RadioGroup>

        <Button
            android:id="@+id/SIGNUPGO"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonshape"
            android:drawablePadding="-10dp"
            android:drawableRight="@drawable/ic_send_black_24dp"
            android:text="Signup" />
    </LinearLayout>
</FrameLayout>
